---

import BuyOrApplyFree from "../../global/BuyOrApplyFree.astro";

---
<section id="home">
	 <video class="block md:hidden" autoplay muted loop id="myVideo" transition:persist>
		<source src="videos/u-wifi-opener-prod-mobile.mp4" type="video/mp4">
	</video>
	<video class="hidden md:block" autoplay muted loop id="myVideoMobile" transition:persist>
		<source src=`/videos/asencion.mp4` type="video/mp4">
	</video>

<div class="botones-back-column">
	<div class="botones-back">
		<BuyOrApplyFree
			buttonText1="b1"
			buttonLink1="#"
			buttonText2="b2"
			buttonLink2="#"
		/>
	</div>

</div>


	
</section>
		  
	<style>

		section{
		
			position: relative;
			display: flex;
			flex-direction: column-reverse;
			flex: 1;
			margin-top: 80px;
			width: 100vw;
			height: 80vh;
			border-bottom: #bd802f 2px solid;
			margin-bottom: 100PX;
		}
		.botones-back-column{
			position: absolute;
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			align-items: center;
		
        	
		
		
		}
		.botones-back{
			flex-direction: row;
		
			background-color: #d4d7d0;
		
			display: flex;
			align-items: center;
			border-radius: 0 50px 50px 0;
			padding: 16px;
			margin-bottom: clamp(10px, 5vw, 80px);
		
		}
		.texto-or{
			font-size: clamp(10px, 20vw, 24px);
		}	
		#myVideo, #myVideoMobile {
		position: absolute;
       
		width: 100vw;
        height: 100%;
		object-fit: cover;
		z-index: -1;
		}
		main{
			padding-left: clamp(0px, 5vw, 100px);
			padding-right: clamp(0px, 5vw, 100px);
		}

	
			@media (max-width: 768px) {
				.botones {
				flex-direction: column;
				align-items: center;
				bottom: 5%;
				gap: clamp(4px, 15vw, 20px);
		
				}
		
			}
	
	
 </style>